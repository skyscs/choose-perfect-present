generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Present {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  images      String   // Will store JSON string of image URLs
  isReserved  Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
